<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Battle Simulation</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .hero-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 15px;
    }
    .hero-card {
      border: 1px solid #ccc;
      border-radius: 4px;
      padding: 10px;
      width: 120px;
      text-align: center;
      cursor: pointer;
      background-color: #fff;
      transition: background 0.3s;
    }
    .hero-card.selected {
      background-color: #007BFF;
      color: #fff;
    }
    .boost-field {
      margin-bottom: 10px;
    }
    .boost-field select, .boost-field input {
      margin-right: 5px;
      padding: 5px;
    }
    form > button[type="submit"] {
      margin-top: 15px;
      padding: 10px 20px;
      background: #28a745;
      border: none;
      color: #fff;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/inventory">Inventory</a></li>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h1>Battle Simulation</h1>
    <form id="simulationForm" action="/simulate" method="post">
      <section>
        <h2>Select Enemy Lineup (Pick 5)</h2>
        <div class="hero-grid">
          <% heroes.forEach(function(hero) { %>
            <div class="hero-card" data-id="<%= hero._id %>">
              <p><%= hero.name %></p>
              <p><%= hero.heroType %></p>
            </div>
          <% }); %>
        </div>
        <input type="hidden" id="enemyLineup" name="enemyLineup">
        <button type="button" id="confirmLineup">Confirm Lineup</button>
      </section>
      <section id="boostSection" style="display:none;">
        <h2>Select Constellation Boosts</h2>
        <div id="boostFields">
          <div class="boost-field">
            <select name="boosts[0][type]">
              <option value="">Select Boost</option>
              <option value="hp">HP</option>
              <option value="atk">ATK</option>
              <option value="matk">MATK</option>
              <option value="def">DEF</option>
              <option value="mdef">MDEF</option>
              <option value="physicalCritical">Physical Critical</option>
              <option value="magicCritical">Magic Critical</option>
            </select>
            <input type="number" name="boosts[0][value]" placeholder="Value" step="0.01" />
          </div>
        </div>
        <button type="button" id="addBoost">+</button>
      </section>
      <button type="submit">Simulate</button>
    </form>
    <% if (typeof simulationResult !== 'undefined') { %>
      <section class="simulation-result">
        <h2>Simulation Result</h2>
        <p><%= simulationResult %></p>
      </section>
    <% } %>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Lords Mobile Battle Simulator</p>
  </footer>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const heroCards = document.querySelectorAll('.hero-card');
      const enemyLineupInput = document.getElementById('enemyLineup');
      let selectedHeroes = [];
      
      heroCards.forEach(card => {
        card.addEventListener('click', function() {
          const heroId = this.getAttribute('data-id');
          if (this.classList.contains('selected')) {
            this.classList.remove('selected');
            selectedHeroes = selectedHeroes.filter(id => id !== heroId);
          } else {
            if (selectedHeroes.length < 5) {
              this.classList.add('selected');
              selectedHeroes.push(heroId);
            } else {
              alert('You can only select 5 heroes.');
            }
          }
        });
      });
      
      document.getElementById('confirmLineup').addEventListener('click', function() {
        if (selectedHeroes.length !== 5) {
          alert('Please select exactly 5 heroes for the enemy lineup.');
          return;
        }
        enemyLineupInput.value = selectedHeroes.join(',');
        document.getElementById('boostSection').style.display = 'block';
      });
      
      let boostCount = 1;
      document.getElementById('addBoost').addEventListener('click', function() {
        const boostFields = document.getElementById('boostFields');
        const div = document.createElement('div');
        div.classList.add('boost-field');
        div.innerHTML = `<select name="boosts[${boostCount}][type]">
          <option value="">Select Boost</option>
          <option value="hp">HP</option>
          <option value="atk">ATK</option>
          <option value="matk">MATK</option>
          <option value="def">DEF</option>
          <option value="mdef">MDEF</option>
          <option value="physicalCritical">Physical Critical</option>
          <option value="magicCritical">Magic Critical</option>
        </select>
        <input type="number" name="boosts[${boostCount}][value]" placeholder="Value" step="0.01" />`;
        boostFields.appendChild(div);
        boostCount++;
      });
    });
  </script>
</body>
</html>
